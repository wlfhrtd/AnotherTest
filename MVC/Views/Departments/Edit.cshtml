@model MVC.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.Name" class="control-label"></label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>
            <h4>Related Departments</h4>
            <div class="form-group">               
                <ul id="sortable1" class="connectedSortable">
                    @for (int i = 0; i < Model.ConnectedSubdepartmentsNames.Count; i++)
                    {
                        <li id=@i class="ui-state-default">
                            @Model.ConnectedSubdepartmentsNames[i]
                            <input type="hidden" name=ConnectedSubdepartmentsNames[@i] class=ConnectedDepartment value=@Model.ConnectedSubdepartmentsNames[i] />
                        </li>
                    }
                </ul>
            </div>
            <h4>Unrelated Departments</h4>
            <div class="form-group">
                <ul id="sortable2" class="connectedSortable">
                    @for (int j = 0; j < Model.DisconnectedSubdepartmentsNames.Count; j++)
                    {
                        <li id=@j class="ui-state-highlight">
                            @Model.DisconnectedSubdepartmentsNames[j]
                            <input type="hidden" name=DisconnectedSubdepartmentsNames[@j] class=DisconnectedDepartment value=@Model.DisconnectedSubdepartmentsNames[j] />
                        </li>
                    }
                </ul>
            </div>
            <input type="hidden" asp-for="Department.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
